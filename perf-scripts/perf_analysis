#!/usr/bin/env python

"""
Run different versions of p3 micro app and compare performance. It is
expected that this will be run from micro-apps directory.
"""

from utils import run_cmd_no_fail, expect, check_minimum_python_version
check_minimum_python_version(2, 7)

import argparse, sys, os, tempfile, re, socket

###############################################################################
class ScalingExp(object):
###############################################################################

    def __init__(self, arg_str):
        try:
            self.varname, self.scale_factor, self.upper_limit = arg_str.split(":")
            self.scale_factor = float(self.scale_factor)
            self.upper_limit  = int(self.upper_limit)
        except Exception:
            expect(False, "Scaling experiment needs to be in format VARNAME:SCALE_FACTOR:MAX")

        expect(self.varname in ["ni", "nk", "dt", "ts"], "Unknown varname '{}'".format(self.varname))

    def should_continue(self, ni, nk, dt, ts):
        return locals()[self.varname] <= self.upper_limit

    def update_values(self, ni, nk, dt, ts):
        """
        >>> se = ScalingExp('ni:2:1000')
        >>> se.update_values(10, 3, 300, 7)
        (20, 3, 300, 7)
        """
        d = {'ni':ni, 'nk':nk, 'dt':dt, 'ts':ts}
        d[self.varname] = int(d[self.varname] * self.scale_factor)
        return d['ni'], d['nk'], d['dt'], d['ts']

    def plot(self, results, ni, nk, dt, ts):
        prov_msg = "Provenance: "
        for data, name in [(ni, "ni"), (nk, "nk"), (dt, "dt"), (ts, "ts")]:
            if name != self.varname:
                prov_msg += " {}={}".format(name, data)

        print "{} machine={} commit={}".format(prov_msg, socket.gethostname().split(".")[0], run_cmd_no_fail("git rev-parse --short HEAD"))

        for test_name, test_results in results.iteritems():
            print test_name, self.varname
            for test_result in test_results:
                ni, nk, dt, ts, avg_time = test_result
                cols_sec = float(ni) / avg_time
                print "{}, {:.2f}".format(locals()[self.varname], cols_sec)

###############################################################################
def parse_command_line(args, description):
###############################################################################
    parser = argparse.ArgumentParser(
        usage="""\n{0} <NI> <NK> <DT> <TS> <KOKKOS_DIR> [<CXX_COMPILER>] [-n num_runs] [--verbose]
OR
{0} --help

\033[1mEXAMPLES:\033[0m
    \033[1;32m# Run with 1 horizontal and 111 vertical columns over 300s with 30s timesteps \033[0m
    > {0} 1 111 300 30 /home/jgfouca/kokkos-install/install

    \033[1;32m# Run with 1 horizontal and 111 vertical columns over 300s with 30s timesteps with single precision \033[0m
    > {0} 1 111 300 30 /home/jgfouca/kokkos-install/install -c ' -DDOUBLE_PRECISION=FALSE'
    # Note the space before the dash
""".format(os.path.basename(args[0])),
        description=description,
        formatter_class=argparse.ArgumentDefaultsHelpFormatter
    )

    parser.add_argument("ni", type=int, help="Num horizontal columns. If doing a scaling experiment, this is the starting value.")

    parser.add_argument("nk", type=int, help="Num vertical columns. If doing a scaling experiment, this is the starting value.")

    parser.add_argument("dt", type=int, help="Time step length(s). If doing a scaling experiment, this is the starting value.")

    parser.add_argument("ts", type=int, help="Number of timesteps. If doing a scaling experiment, this is the starting value.")

    parser.add_argument("kokkos", help="Kokkos location")

    parser.add_argument("--cxx", default=os.getenv("CXX"), help="c++ compiler")

    parser.add_argument("-n", "--num-runs", type=int, default=1, help="Number of times to repeat run")

    parser.add_argument("-t", "--test", action="append", choices=("fortran", "cpp", "kokkos", "workspace"),
                        help="Select which tests to run, default is all. First one will be used as reference point")

    parser.add_argument("-c", "--cmake-options", default="",
                        help="Extra options to pass to cmake")

    parser.add_argument("-u", "--use-existing", action="store_true",
                        help="Use existing build directory (assumes pwd is build dir)")

    parser.add_argument("-s", "--scaling",
                        help="Do a scaling experiment. Format is VARNAME:SCALE_FACTOR:MAX")

    parser.add_argument("-p", "--plot-friendly", action="store_true",
                        help="Project plot-friendly output")

    args = parser.parse_args(args[1:])

    if not args.test:
        args.test = ["fortran", "cpp", "kokkos", "workspace"]

    args.cmake_options += " -DCMAKE_BUILD_TYPE=RelWithDebInfo -DKokkos_DIR={}".format(args.kokkos)
    if args.cxx:
        args.cmake_options += " -DCMAKE_CXX_COMPILER={}".format(args.cxx)

    expect(not args.plot_friendly or args.scaling, "Doesn't make sense to have plot friendly output without a scaling experiment")

    if args.scaling is None:
        scaling_exp = ScalingExp("ni:2.0:{}".format(args.ni))
    else:
        scaling_exp = ScalingExp(args.scaling)

    return args.ni, args.nk, args.dt, args.ts, args.num_runs, args.test, args.cmake_options, args.use_existing, scaling_exp, args.plot_friendly

###############################################################################
def build_p3(cmake_options, plot_friendly):
###############################################################################
    import subprocess
    pipe = subprocess.PIPE if plot_friendly else None
    verbose = False if plot_friendly else True
    run_cmd_no_fail("cmake {} ..".format(cmake_options), arg_stdout=pipe, arg_stderr=pipe, verbose=verbose)
    run_cmd_no_fail("make -j8", arg_stdout=pipe, arg_stderr=pipe, verbose=verbose)

###############################################################################
def get_time(output):
###############################################################################
    r"""
    >>> output = 'Foo\nTime = 0.047 seconds.\nbar'
    >>> get_time(output)
    0.047
    """
    regex = re.compile(r'Time\s*=\s*([^\s]+)\s*seconds')
    the_time = None
    for line in output.splitlines():
        m = regex.match(line)
        if m:
            expect(the_time is None, "Multiple matches!")
            the_time = float(m.groups()[0])

    return the_time

###############################################################################
def run_p3(exename, ni, nk, dt, ts, num_runs):
###############################################################################
    avg = 0.0
    for _ in range(num_runs):
        output = run_cmd_no_fail("{} {} {} {} {} 1".format(exename, ni, nk, dt, ts),
                                 from_dir="p3")
        avg += get_time(output)

    return avg / num_runs # Maybe we should use minimum instead of avg?

###############################################################################
def run_fortran(ni, nk, dt, ts, num_runs):
###############################################################################
    return run_p3("micro_sed", ni, nk, dt, ts, num_runs)

###############################################################################
def run_cpp(ni, nk, dt, ts, num_runs):
###############################################################################
    return run_p3("micro_sed_vanilla", ni, nk, dt, ts, num_runs)

###############################################################################
def run_kokkos(ni, nk, dt, ts, num_runs):
###############################################################################
    return run_p3("micro_sed_vanilla_kokkos", ni, nk, dt, ts, num_runs)

###############################################################################
def run_kokkos_workspace(ni, nk, dt, ts, num_runs):
###############################################################################
    return run_p3("micro_sed_workspace_kokkos", ni, nk, dt, ts, num_runs)

###############################################################################
def user_explain(test, avg_time, reference, ni):
###############################################################################
    msg = "{} ran in {} seconds".format(test, avg_time)
    if reference:
        speedup = (1.0 - (avg_time / reference)) * 100
        msg += ", speedup={:.2f}%".format(speedup)

    msg +=", {:.2f} cols/sec".format(ni / avg_time)

    print msg

###############################################################################
def perf_analysis(ni, nk, dt, ts, num_runs, tests, cmake_options, use_existing, scaling_exp, plot_friendly):
###############################################################################
    if use_existing:
        expect(os.path.isdir("p3") and os.path.exists("CMakeCache.txt"),
               "{} doesn't look like a build directory".format(os.getcwd()))

    else:
        expect(os.path.basename(os.getcwd()) == "micro-apps", "Please run from micro-apps directory")

        tmpdir = tempfile.mkdtemp(prefix="build", dir=os.getcwd())
        os.chdir(tmpdir)

        build_p3(cmake_options, plot_friendly)

    results = {}
    while (scaling_exp.should_continue(ni, nk, dt, ts)):
        if not plot_friendly:
            print
            print "RUNNING NI", ni, "NK", nk, "DT", dt, "TS", ts

        reference = None
        for test in tests:
            if test == "fortran":
                avg_time = run_fortran(ni, nk, dt, ts, num_runs)
            elif test == "cpp":
                avg_time = run_cpp(ni, nk, dt, ts, num_runs)
            elif test == "kokkos":
                avg_time = run_kokkos(ni, nk, dt, ts, num_runs)
            elif test == "workspace":
                avg_time = run_kokkos_workspace(ni, nk, dt, ts, num_runs)
            else:
                expect(False, "Unknown test '{}'".format(test))

            if plot_friendly:
                results.setdefault(test, []).append((ni, nk, dt, ts, avg_time))
            else:
                user_explain(test, avg_time, reference, ni)
            reference = avg_time if reference is None else reference

        ni, nk, dt, ts = scaling_exp.update_values(ni, nk, dt, ts)

    if plot_friendly:
        scaling_exp.plot(results, ni, nk, dt, ts)

    return True

###############################################################################
def _main_func(description):
###############################################################################
    ni, nk, dt, ts, num_runs, tests, cmake_options, use_existing, scaling_exp, plot_friendly = \
        parse_command_line(sys.argv, description)

    success = perf_analysis(ni, nk, dt, ts, num_runs, tests, cmake_options, use_existing, scaling_exp, plot_friendly)

    sys.exit(0 if success else 1)

###############################################################################

if (__name__ == "__main__"):
    _main_func(__doc__)
